    <GridView
        android:id="@+id/gvSelect"
        android:layout_width="234dp"
        android:layout_height="190dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:numColumns="2" >
    </GridView>

</LinearLayout>