<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/list_header_layout"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
              android:gravity="center"
            android:background="@color/transparentblack"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/name"
                style="@style/TextStyle"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="点位" />

            <TextView
                android:id="@+id/status"
                style="@style/TextStyle"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="状态" />

            <ImageView
                android:id="@+id/redwarm"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginRight="0dp"
                android:background="@drawable/record_count" />

            <TextView
                android:id="@+id/recordcount"
                style="@style/TextStyle"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="记录条数" />

            <TextView
                android:id="@+id/recentdatatime"
                style="@style/TextStyle"
                android:layout_width="120dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="最近数据时间" />
        </LinearLayout>

        <ListView
            android:id="@+id/densityValueList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="0dp"
            android:listSelector="@android:color/transparent"
            android:minHeight="140dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/beizhu"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:gravity="center|right"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />

</LinearLayout>