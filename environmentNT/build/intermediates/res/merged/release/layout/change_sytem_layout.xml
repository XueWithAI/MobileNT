<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/change_system_bg"
    android:weightSum="100"
    android:orientation="vertical">
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="0dp"

        android:layout_weight="24"
        android:background="@color/transparent"
        android:textColor="#2770A3"
        android:textSize="28dp"></LinearLayout>
    <LinearLayout
        android:id="@+id/air_btn"
        android:layout_width="fill_parent"
        android:layout_height="0dp"

        android:layout_weight="20"
        android:layout_marginLeft="@dimen/width_56_320"
        android:layout_marginRight="@dimen/width_52_320"

        android:background="@color/transparent"
        android:textColor="#2770A3"
        android:textSize="28dp">

        <TextView
            android:id="@+id/check_msg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_156_320"
            android:layout_marginStart="@dimen/width_156_320"
            android:layout_marginTop="@dimen/height_50_320"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="0dp"

        android:layout_weight="12"
        android:layout_marginLeft="@dimen/width_56_320"
        android:layout_marginRight="@dimen/width_52_320"

        android:background="@color/transparent"
        android:textColor="#2770A3"
        android:textSize="28dp"></LinearLayout>
    <LinearLayout
        android:id="@+id/water_btn"
        android:layout_width="fill_parent"
        android:layout_height="0dp"

        android:layout_weight="17"
        android:layout_marginLeft="@dimen/width_56_320"
        android:layout_marginRight="@dimen/width_52_320"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:textColor="#2770A3"
        android:textSize="28dp" />


</LinearLayout><!--

